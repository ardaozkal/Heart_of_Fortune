        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="10,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="417" MaxLength="3" ToolTip="Letter to Try" TextChanged="textBox1_TextChanged"/>
        <Button x:Name="button1" Content="Try" HorizontalAlignment="Left" Margin="432,64,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>

    </Grid>
</Window>
